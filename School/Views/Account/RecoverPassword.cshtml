@model School.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}

<h2>RecoverPassword</h2>
<flash dismissable="true" />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Recover password"  class="btn btn-warning" />
                <a asp-action="Login" class="btn btn-success"><i class="fa fa-chevron-left"></i> Back to login</a>
            </div>
        </form>        
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    };
}
