@model School.Models.CreatePasswordViewModel

@{
    ViewData["Title"] = "Confirm Email";
}

<flash dismissable="true" />
<section id="explore" class="explore">
    <div class="container">
        <div class="section-header">
            <h2>Confirmed Email!</h2>
            <p> Thank you for confirming your email. Now you need to create a password: </p>
        </div>
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="@Model.UserId" />
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" size="10" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm">Confirm</label>
                    <input asp-for="Confirm" type="password" class="form-control" size="10" />
                    <span asp-validation-for="Confirm" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create password" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>
</section>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}